.jump_box{
    position: fixed;
    top:2%;
    right:2%;
    border-radius: 100%;
    z-index:1;
    background:rgb(108, 85, 240);
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    width: 80rpx;
    box-shadow:0rpx 0rpx 5rpx 5rpx rgb(109, 88, 226);
    border:5rpx white solid;
    opacity: 0.9;
}

.jump_button{
    width:92%;
    height: 92%;
    border-radius: 100%;
}

.jump_pic{
    width: 100%;
    height: 100%;
    border-radius: 30rpx;
}

.ad_box{
    width: 100%;
    height: 100vh;
    background:rgb(236, 233, 253);
}

.ad_swiper_box{
    width: 100%;
    height: 100%;
    border: 5rpx solid rgb(201, 194, 241);
    border-radius: 30rpx;
}


.ad_pic{
    width: 100%;
    height: 100%;
    border-radius: 30rpx;
}

.ad_info{
    width: 100%;
    height: 330rpx;
    display:flex;
    position: fixed;
    bottom: 30rpx;
    justify-content:center;
    align-items: center;
    flex-direction:column;
    align-content:center;
}

.ad_hidden_button{
    display: flex;
    justify-content: center;
    justify-items: center;
    height: 30rpx;
    width: 100%;
}

.ad_hidden_pic{
    margin-bottom: 3rpx;
    margin-top: 3rpx;
    height: 30rpx;
    width: 60rpx;
}

.ad_text_box{
    width: 92%;
    height: 300rpx;
    border: 2rpx solid rgb(135, 116, 240);
    box-shadow: 0 0 5rpx 5rpx rgb(201, 194, 241);
    border-radius: 30rpx;
    background: rgb(108, 85, 240);
    opacity: 0.8;
    display:flex;
    justify-content:flex-start;
    flex-direction: column;
    align-items: center;
}

.ad_text_swiper{
    width: 100%;
    height: 100%;
    display: flex;
    justify-items: center;
    justify-content: center;
    border-radius: 30rpx;

}

.ad_text_swiper_item{
    display: flex;
    justify-content: center;
    justify-items: center;
    align-content: center;
    width: 100%;
    height: 100%;
    border-radius: 30rpx;
}

.ad_text{
    display: flex;
    align-items: center;
    font-weight: bolder;
    font-size:40rpx;
    color:white;
    margin: 15rpx;
    position: relative;
}

