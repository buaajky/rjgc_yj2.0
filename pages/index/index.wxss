.swiper_box{
    height: fit-content;
    border:5rpx solid white;
    width:100%;
    border-radius: 30rpx;
    background:white;
    margin-top:30rpx;
    box-shadow: 0 0 5rpx 5rpx rgba(219, 219, 219, 0.925);
}

.swiper_content{
    height: var(--pageSize--);
    border:5rpx solid white;
    width:100%;
    border-radius: 10rpx;
    background:white;
}

.swiper_tab_bar{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
}

.swiper_tab_line{
  position: relative;
  width: 50%;
  height: 4rpx;
  background: #869cff;
  transition: all 0.3s;
  bottom: -8rpx;
  z-index:2;
}

.swiper_tab_navigator{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-content: center;
  line-height: 79rpx;
  position: relative;
  font-size:12px;
  top:5rpx;
  z-index:1;
}

.swiper_tab_item{
  display: flex;
  flex-direction: row;
  min-width:33%;
  max-width:33%;
  height: 100%;
  text-align:center;
  justify-content: center;
  align-items: center;
  vertical-align: center;
  color:rgb(160, 160, 160);
  border-radius: 30rpx;
}

.swiper_tab_item_text{
    font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    font-weight: bolder;
    font-size: large;
    position: relative;
    top:-10rpx;
}

.fly_icon_box{
    width: 100%;
    height: 40rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.fly_icon_pic{
    width: 60rpx;
    height: 60rpx;
    transition: all 1s;
    position: relative;
    bottom: 80rpx;
    left: 20rpx;
    z-index:2;
}

