<!--pages/AirplaneSearch/AirplaneSearch.wxml-->
<!--<l-calendar show="{{ true }}" />-->
<view>
  <view class="section">  
    <picker mode="date" value="{{date}}" start="2022-01-01" end="2023-12-31" field="day" bindchange="bindDateChange">  
      <view class="picker">  
        当前查询日期: {{search_date}}  
      </view>  
    </picker> 
  </view>
</view>

<view class="divview"></view>

<view>
  <view class="ticket_title">查询结果</view>
  <view class="divview"></view>

  <view class="list">
  <block wx:for="{{dataList}}" wx:key="list" wx:for-item="item">
  <view class="list_item">
      <view class="img">
        <image src="/images/{{item.air_company}}.jpg"  mode="widthFix"/>
      </view>
      <view class="info">
        <view class="number_and_price">
          <view class="number">{{item.air_number}}</view>
          <view class="price">￥{{item.air_price}}起</view>
        </view>
        
        <view class="date_and_city">
          <view class="date">{{item.air_date}}</view>
          <view class="city">{{item.air_city_start}} —— {{item.air_city_end}}</view>
        </view>
        <view class="times" style="width: 462rpx; height: 52rpx; display: flex; box-sizing: border-box">
          <view class="time_left">{{item.air_time_start}}</view>
          <image src="/images/arrow1.png" class="arrow"></image>
          <view class="time_right">{{item.air_time_end}}</view>
        </view>

        <view class="times">
          <l-tag plain="{{true}}" class="airport_left" size="mini">{{item.air_airport_start}}</l-tag>

          <l-tag plain="{{true}}" class="airport_right" size="mini">{{item.air_airport_end}}</l-tag>
        </view>
        
        <view class="num"></view>
        
      </view>
      <view class="clear"></view>
  </view>
  </block>
  </view>

</view>




