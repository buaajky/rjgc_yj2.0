/* pages/AirplaneSearch/AirplaneSearch.wxss */
.section{
  background:#6991e6;
  margin:20rpx;
  padding:20rpx;
  border-radius: 10rpx;
}

.divview {
  margin-top: 20rpx;
  width: 100%;
  height: 10rpx;
  background-color: rgb(248, 248, 248);
}

.ticket_title {
  width: 98%;
  margin-left: 1%;
  text-align: center;
  font-weight: bold;
  font-size: 110%;
  color: #030303;
  margin-bottom: 15rpx;
}

/**/
.clear{
  clear: both;
  overflow: hidden;
}

.list{
  margin-top:10px;
}
 
.list_item{
  margin-top:10px;
  padding:10px;
  height:140px;
  border-bottom:10rpx solid #E8E8E8;
}
.img{
  float:left;
  width:30%;
  height:90%;
}
.img image{
   width:100%;
   height:100%;
}
 
.info{
  width:65%;
  float:right;
  height:130px;
  position:relative;
}
.number{
  color:#3963bc;
  margin-left:10px;
  font-size: 20px;
}
 
.price{
  color:#3963bc;
  font-size:15px;
  position: absolute;
  right:40rpx;
  bottom:10rpx;
}
 
.date_and_city{
  display: flex;
}

.date{
  color:#747474;
  margin-left:10px;
  font-size:12px;
}

.city{
  color:#553939;
  margin-left:10px;
  font-size:12px;
}

.times{
  display: flex;
}

.time_left{
  font-size:15px;
  position: absolute;
  left:30rpx;
}

.time_right{
  font-size:15px;
  position: absolute;
  right:30rpx;
}

.airport_left{
  position: absolute;
  left:0rpx;
}

.airport_right{
  position: absolute;
  right:0rpx;
}

.arrow{
  width: 172rpx;
  height: 48rpx;
  position: absolute;
  right: 130rpx;
}
