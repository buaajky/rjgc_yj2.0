.header {
  border-radius: 50rpx 50rpx 0rpx 0rpx; 
  border-top: 60rpx solid #3963bc;
  /* #33cc99 */
  /* #e1eedd */
}

.basic_inf {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 0rpx 0rpx 20rpx 20rpx; 
  border-bottom: 2rpx solid #3963bc;
}

.basic_header {
  height: 60rpx;
  background:-webkit-gradient(linear, 0 0, right 0, from(#bebebe), to(rgb(255, 255, 255, 1)), color-stop(80%,rgb(255, 255, 255, 1)))
}

.basic_header_first {
  display: inline-block;
  width: 21%;
}

.basic_header_graph {
  margin-left: -5%;
  margin-right: 5%;
  transform: skew(-20deg);
  background-color: #3963bc;
  color: #ffffff;
  text-align: right;
  padding-right: 10%;
  font-size: medium;
  height: 60rpx;
  
}

.basic_date {
  width: 29%;
  display: inline-block;
  font-size: small;
}

.p2p {
  width: 25%;
  display: inline-block;
  font-size: small;
}

.deep_arrow {
  height: 40rpx;
  width: 35rpx;
  vertical-align: bottom;
}

.basic_time {
  width: 21%;
  display: inline-block;
  font-size: small;
  text-align: right;
}

.plans {
  margin-top: 20rpx;
}

.plan_head {
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  vertical-align: top;
}

.plan_head_img {
  height: 50rpx;
  width: 50rpx;
  vertical-align: top;
}

.plan_head_text {
  display: inline-block;
  width: 74%;
  vertical-align: top;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #3963bc;
  font-weight: bold;
}

.plan_head_button {
  display: inline-block;
  width: 17%;
  font-size: x-small;
  color: gray;
  background-color: white;
  vertical-align: top;
  text-align: right;
}

button {
  padding: 0 0 0 0 !important;
}

button::after {
  border: 0 none;
}

.step_title2 {
  font-size: 38rpx !important;
  font-weight: bold;
}

.describe_container {
  position:absolute;
  right: 30px;
}

.describe_text {
  width: 120rpx;
  font-size: small;
  color:#595959;
  /* font-weight: bold; */
}

.exchange {
  border-left: 10rpx solid #8c98ae;
  margin-top: 30rpx;
  margin-bottom: 40rpx; 
}

.exchange_same {
  width: 600rpx;
  background: -webkit-gradient(linear, 0 0, right 0, from(#d9e5fc), to(rgb(255, 255, 255, 1)));
  font-size: medium;
  font-weight: bold;
  padding-left: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #595959;
}

.exchange_diff {
  width: 600rpx;
  background-color: #d9e5fc;
  background: -webkit-gradient(linear, 0 0, right 0, from(#d9e5fc), to(rgb(255, 255, 255, 1)))
}

.exchange_main {
  font-size: small;
  font-weight: bold;
  margin-left: 10rpx;
  color: #595959;
}

.exchange_more {
  font-size: x-small;
  font-weight: bold;
  margin-left: 10rpx;
  color: #595959;
  opacity: 0.8;
}

.seemap {
  display: inline-block;
  width: 50%;
  font-size: xx-small;
  text-align: left;
  text-decoration: underline;
  color: #3963bc;
  background-color: white;
  vertical-align: top;
  margin-left: 15rpx;
}

.add2plan {
  display: inline-block;
  margin-left: 10%;
  margin-bottom: 10rpx;
  width: 35%;
}

.add2plan_label {
  font-weight: bold;
}

.link {
  width: 95%;
  height: 120rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  box-shadow:0 4rpx 20rpx 0 rgba(212,217,223,.9);
  vertical-align: top;
  margin-bottom: 50rpx;
}

.link_icon {
  display: inline-block;
  width: 15%;
  height: 75%;
  margin-left: 30rpx;
  margin-top: 20rpx;
  vertical-align: top;
}

.link_text {
  display: inline-block;
  width: 45%;
  margin-left: 5%;
  /* color:#3963bc; */
  font-weight: bold;
  vertical-align: top;
  margin-top: 40rpx;
}

.link_button {
  display: inline-block;
  width: 15%;
  margin-top: 15rpx;
  margin-left: 10%;
  margin-right: 30rpx;
  background-color: #3963bc;
  color: #ffffff;
  vertical-align: top;
}

.notice_detail_title {
  text-align: center;
  font-size: large;
  font-weight: bold;
  margin-top: 6px;
}

.notice_detail_header {
  width: 85%;
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 5px;
  color: coral;
  font-size: medium;
  font-weight: bold;
}

#notice_detail {
  height: 300px;
  width: 85%;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 20px;
  font-size: medium;
  background-color: rgb(122, 122, 122, 0.1);
  padding-top: 10px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
}